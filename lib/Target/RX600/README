## setup sample target
$ wget http://llvm.org/releases/3.2/llvm-3.2.src.tar.gz
$ tar zxf llvm-3.2.src.tar.gz
$ cd llvm-3.2.src/lib/Target
$ git clone git://github.com/sabottenda/llvm-sample-target.git RX600
$ cd - && cd llvm-3.2.src
$ patch -p1 < ./lib/Target/RX600/config.patch

## compile and install
$ cd -
$ mkdir build
$ cd build
$ ../llvm-3.2.src/configure --prefix=/opt/llvm --enable-debug-runtime --enable-assertions --enable-debug-symbols --disable-optimized --enable-debug-runtime
$ make -j4
$ sudo make install
